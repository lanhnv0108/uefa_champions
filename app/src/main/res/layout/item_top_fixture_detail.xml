<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.lanh.uefachampions.screen.item.TopFixtureDetailItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:background="@drawable/bg_team"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_40">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logoTeamHome"
            loadImageUrl="@{item.teamHome.logo}"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginStart="@dimen/dp_43"
            android:layout_marginTop="@dimen/dp_45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/image_news" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nameTeamHome"
            style="@style/GilroyTextView.Bold.14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@{item.teamHome.name}"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/logoTeamHome"
            app:layout_constraintStart_toStartOf="@id/logoTeamHome"
            app:layout_constraintTop_toBottomOf="@id/logoTeamHome"
            tools:text="Borrussia Dortmund" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/GilroyTextView.Bold.36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.goalString}"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/logoTeamHome"
            app:layout_constraintEnd_toStartOf="@id/logoTeamAway"
            app:layout_constraintStart_toEndOf="@id/logoTeamHome"
            app:layout_constraintTop_toTopOf="@id/logoTeamHome"
            tools:text="1 - 0" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logoTeamAway"
            loadImageUrl="@{item.teamAway.logo}"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_45"
            android:layout_marginEnd="@dimen/dp_42"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/image_news" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nameTeamAway"
            style="@style/GilroyTextView.Bold.14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@{item.teamAway.name}"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/logoTeamAway"
            app:layout_constraintStart_toStartOf="@id/logoTeamAway"
            app:layout_constraintTop_toBottomOf="@id/logoTeamAway"
            tools:text="Borrussia Dortmund" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
