<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.lanh.uefachampions.utils.NumberUtilKt" />

        <variable
            name="item"
            type="com.lanh.uefachampions.data.model.Standing" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:foreground="?attr/selectableItemBackground">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.07" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.58" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.63" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.70" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.76" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.81" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelinePTS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewRank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_medium"
            android:gravity="start"
            android:text="@{item.rank != null ? item.rank.toString() : ``}"
            android:textColor="@color/color_black_text"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@id/guidelineName"
            app:layout_constraintStart_toStartOf="@id/guidelineIndex"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewLogo"
            loadImageUrl="@{item.team.logo}"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:gravity="start"
            app:layout_constraintEnd_toStartOf="@id/textViewNameTeam"
            app:layout_constraintStart_toStartOf="@id/guidelineName"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewNameTeam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/gilroy_medium"
            android:gravity="start"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="@{item.team.name}"
            android:textColor="@color/color_black_text"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@id/guidelineP"
            app:layout_constraintStart_toEndOf="@id/imageViewLogo"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="name team" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewPlayed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_medium"
            android:gravity="start"
            android:text="@{item.all.played != null ? item.all.played.toString() : ``}"
            android:textColor="@color/color_black_text"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@id/guidelineW"
            app:layout_constraintStart_toStartOf="@id/guidelineP"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewWin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_medium"
            android:gravity="start"
            android:text="@{item.all.win.toString() ?? ``}"
            android:textColor="@color/color_black_text"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@id/guidelineD"
            app:layout_constraintStart_toStartOf="@+id/guidelineW"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewDraw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_medium"
            android:gravity="start"
            android:text="@{item.all.draw.toString() ?? ``}"
            android:textColor="@color/color_black_text"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@id/guidelineL"
            app:layout_constraintStart_toStartOf="@+id/guidelineD"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewLose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_medium"
            android:gravity="start"
            android:text="@{item.all.lose.toString() ?? ``}"
            android:textColor="@color/color_black_text"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@id/guidelineGoal"
            app:layout_constraintStart_toStartOf="@+id/guidelineL"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewGoals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_medium"
            android:gravity="start"
            android:text="@{NumberUtilKt.toPoint(item.goalsDiff)}"
            android:textColor="@color/color_black_text"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@id/guidelinePTS"
            app:layout_constraintStart_toStartOf="@+id/guidelineGoal"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewPoints"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_12"
            android:fontFamily="@font/gilroy_medium"
            android:gravity="start"
            android:text="@{item.points.toString() ?? ``}"
            android:textColor="@color/color_black_text"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guidelinePTS"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>