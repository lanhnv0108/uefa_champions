<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_purple_200</item>
        <item name="colorPrimaryVariant">@color/color_purple_700</item>
        <item name="colorOnPrimary">@color/color_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_teal_200</item>
        <item name="colorSecondaryVariant">@color/color_teal_200</item>
        <item name="colorOnSecondary">@color/color_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.search" parent="AppTheme">
        <!-- Text color -->
        <item name="android:editTextColor">@color/color_orange_white</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/color_gray_light</item>
    </style>

    <!-- Customize TextView -->
    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="TextViewHeaderStyle" parent="TextViewStyle">
        <item name="android:textColor">@color/color_orange_white</item>
    </style>

    <style name="TextViewStandingStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewTitleStyle">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="fontFamily">@font/sf_compact_bold</item>
    </style>

    <!-- Customize ImageView -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextViewTitleStyle.White.Right" parent="TextViewTitleStyle">
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="TextViewTitleStyle.White.Left" parent="TextViewTitleStyle">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="PrimaryRecyclerView">
        <item name="android:clipToPadding">false</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>
</resources>
